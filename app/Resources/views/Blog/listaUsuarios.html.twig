{% extends '::baseSecure.html.twig' %}

{% block body %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-md-10 text-center">
            {% for mensaje in app.session.flashbag().get('info') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        </div>
        <div class="col-md-10 text-center">
            {% for mensaje in app.session.flashbag().get('error') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h2>Listado de usuarios</h2>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 ">
             <table id="skills" class="table table-bordered table-responsive table-hover text-center">
                <thead class="table-header" style="background-color: lightsteelblue">                
                    <tr>
                        <td><b>Nombre</b></td>
                        <td><b>Usuario</b></td>
                        <td><b>Email</b></td>
                        <td><b>Editar</b></td>
                        <td><b>Eliminar</b></td>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td><a href="{{ path('edit_user',{'user': user.id}) }}" title="Editar" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>
                            <td><a href="{{ path('delete_user',{'user': user.id}) }}" onclick="return confirm('El registro será eliminado ¿Está seguro?')" title="Eliminar" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}